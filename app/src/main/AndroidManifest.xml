<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="buyerseller.cs646.sdsu.edu.sellit">

    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.CALL_PHONE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />

        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".CategoryActivity"
            android:label="Choose Category"/>
        <activity android:name=".CategoryItemSubItemActivity"
            android:label="Choose Sub-Category"/>
        <activity android:name=".UserLoginActivity"
            android:label="User Login"/>
        <activity android:name=".UserRegistrationActivity"
            android:label="Registration"/>
        <activity android:name=".UserHelperActivity"/>
        <activity android:name=".SellerActivity"
            android:label="Post An Ad"/>
        <activity
            android:name=".ItemActivity"
            android:label=" ITEM DETAILS" />
        <activity android:name=".ChatActivity"/>
        <activity android:name=".ChatListActivity"
            android:label="Chat With User"/>
        <activity android:name=".LocateUserActivity"
            android:label="Locate User"/>
    </application>

</manifest>